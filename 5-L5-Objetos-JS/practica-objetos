
const libro = {
    titulo: "",
    autor: "",
    a単o: 0,
    estado: "",
    capitulos: [],

    describirLibro(){
        console.log(`El libro ${this.titulo} escrito por ${this.autor} en ${this.a単o} se encuentra ${this.estado}`);
    },

    agregarCapitulos(capitulo){
        this.capitulos.push(capitulo);
    }
}

libro.titulo = prompt("Ingresa el titulo del librio");
libro.autor = prompt("Ingresa el autor");
libro.a単o = prompt("Ingresa el a単o");
libro.estado = prompt("Ingresa el estado disponible/prestado");


estado = prompt("Quieres agregar capitulos? No/Si");
while(estado == "Si"){
    let capitulo = prompt("Ingresa el nombre del capitulo");
    libro.agregarCapitulos(capitulo);
    estado = prompt("Quieres agregar otro capitulo?");
}

console.log(libro.describirLibro());

console.log("El libro tiene los siguientes capitulos: ");
for(let i=0; i<libro.capitulos.length;i++){
    console.log(libro.capitulos[i]);
}